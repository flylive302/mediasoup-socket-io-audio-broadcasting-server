# ==========================================
# ðŸ“¦ APP CONFIGURATION
# ==========================================
NODE_ENV=production
PORT=3030
LOG_LEVEL=info

# Laravel Integration
# REQUIRED: The 32-char key shared with Laravel Cloud
LARAVEL_INTERNAL_KEY=YOUR_KEY_HERE
LARAVEL_API_URL=https://api.flyliveapp.com

# CORS
# Frontend domains allowed to connect
CORS_ORIGINS=https://flyliveapp.com,https://www.flyliveapp.com

# Domain Name
AUDIO_DOMAIN=audio.flyliveapp.com

# ==========================================
# âš™ï¸ INFRASTRUCTURE CONFIGURATION
# ==========================================

# Database ID for Redis/Valkey
VALKEY_DB=0

# Mediasoup Ports (UDP)
RTC_MIN_PORT=10000
RTC_MAX_PORT=59999

# ==========================================
# ðŸš€ DEPLOYMENT SETTINGS
# ==========================================

# Digital Ocean SSH Key Fingerprint (REQUIRED)
# Run `doctl compute ssh-key list` to get this
DO_SSH_KEY_FINGERPRINT=YOUR_FINGERPRINT_HERE

# Region
DO_REGION=blr1

# Droplet size (c-4 = ~10k users)
DO_DROPLET_SIZE=c-4

# Project prefix (droplets will be named flylive-audio-01, etc.)
PROJECT_NAME=flylive-audio

# GitHub Config
GITHUB_REPO=https://github.com/flylive302/mediasoup-socket-io-audio-broadcasting-server.git
GITHUB_BRANCH=master

